@model LibraryManagement.Models.CheckOutModel.CheckOutModel
@{
    ViewData["Title"] = "Hold";
}

<div class="container">
    <div class="page-header clearfix detailHeading" >
        <h2 class="text-muted">Checkout Library Item</h2>
    </div>
    <div class="jumbotron">
        <div class="row">
            <div class="col-md-3">
                <div>
                    <p>Model.Title</p>
                    <img class="detailImage" src="@Model.ImageUrl"/>
                </div>
            </div>
            <div class="col-md-9">
                <p>Theere are currently @Model.HoldCount holds in the pueue for this item.</p>
                @using (Html.BeginForm("PlaceHold", "Catalog", FormMethod.Post))
                {
                    @Html.HiddenFor(a=>a.AssetId)
                    <div>
                        Please insert a Library Card Id.
                        @Html.TextBoxFor(a=>a.LibraryCardId)
                    </div>
                    <div>
                        <button type="submit" class="btn btn-info btn-lg">Place Hold</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

